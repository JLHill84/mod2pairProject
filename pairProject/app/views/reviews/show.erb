<!DOCTYPE html>
    <html>
        <head></head>
            <body>
                <div>
                    <h1>Review</h1>
                        <div><p>Author: <%= @user.userName %> </p></div>
                        <div><p>Movie: <%= @movie.title %> </p></div>
                        <div><p>Review: <%= @review.content %></p></div>
                        <div><p><%= @review.stars%> out of 5 Stars!</div>
                        <div><%= link_to "Edit Review?", "/reviews/#{@review.id}/edit" %> <%= link_to "Delete Review?", review_path(@review), method: :delete, data: { confirm: 'Are you sure?' } %></div>
                </div>
        </body>
    </html>