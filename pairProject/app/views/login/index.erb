<!DOCTYPE html>
    <html>
        <head></head>
            <body>
                <div><h1>Please Login</h1></div>
                    <div>
                        <%= form_with url: 'login' do |form| %>
                            <%= form.label :userName %>
                            <p><%= form.text_field :userName %></p>
                            <%= form.label :password %>
                            <p><%= form.text_field :password %>
                            <p><%= form.submit "Login" %></p>
                        <% end %>
                    </div>
            </body>
    </html>